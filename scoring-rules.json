{
  "version": "1.0",
  "total_points": 100,
  "data_sources": {
    "whitespark_2026": "47 experts, 187 factors surveyed",
    "search_atlas_ml": "7,718 businesses, 676 sectors, 92-93% accuracy",
    "sterling_sky": "Individual factor testing by Joy Hawkins",
    "brightlocal": "Industry surveys and studies"
  },
  "sections": [
    {
      "id": "profile",
      "name": "GBP Profile Signals",
      "max_points": 32,
      "weight_source": "Whitespark 2026: GBP Signals = 32% of local pack ranking factors",
      "checks": [
        {
          "id": "primary_category",
          "name": "Primary Category Relevance",
          "max_points": 8,
          "data_citation": "Whitespark 2026: #1 controllable ranking factor. Joy Hawkins documented drop from #1 to #31 from category switch.",
          "rules": [
            { "condition": "matches_top_competitors", "points": 8, "label": "Optimal category matching top competitors" },
            { "condition": "valid_but_different", "points": 5, "label": "Valid category but differs from competitors" },
            { "condition": "mismatched", "points": 2, "label": "Category seems mismatched to services" },
            { "condition": "missing", "points": 0, "label": "No category detected" }
          ]
        },
        {
          "id": "secondary_categories",
          "name": "Secondary Categories",
          "max_points": 4,
          "data_citation": "Joy Hawkins: More relevant categories help, not dilute. Up to 9 secondary categories available.",
          "rules": [
            { "condition": "count_gte_3", "points": 4, "label": "3-5 relevant secondary categories" },
            { "condition": "count_1_2", "points": 2, "label": "1-2 secondary categories" },
            { "condition": "count_0", "points": 0, "label": "No secondary categories" }
          ]
        },
        {
          "id": "services",
          "name": "Services Section",
          "max_points": 6,
          "data_citation": "Sterling Sky 2022 retest: services have direct ranking impact. Effects within 24-72 hours. Pre-defined services stronger than custom.",
          "rules": [
            { "condition": "count_gte_10", "points": 6, "label": "10+ services with descriptions" },
            { "condition": "count_5_9", "points": 4, "label": "5-9 services listed" },
            { "condition": "count_1_4", "points": 2, "label": "1-4 services listed" },
            { "condition": "count_0", "points": 0, "label": "No services" }
          ]
        },
        {
          "id": "description",
          "name": "Business Description",
          "max_points": 4,
          "data_citation": "No direct ranking impact per Sterling Sky, but affects engagement and conversions. 750 character max.",
          "rules": [
            { "condition": "length_500_750_with_keywords", "points": 4, "label": "500-750 chars with service keywords and city" },
            { "condition": "length_250_499", "points": 3, "label": "250-499 chars with some keywords" },
            { "condition": "length_under_250", "points": 1, "label": "Under 250 chars or no keywords" },
            { "condition": "missing", "points": 0, "label": "No description" }
          ]
        },
        {
          "id": "hours",
          "name": "Hours Coverage",
          "max_points": 4,
          "data_citation": "Joy Hawkins (Nov 2023): Business hours is top-5 ranking factor. Businesses vanish from local pack when closed. Rankings degrade in final hour.",
          "rules": [
            { "condition": "extended_hours_weekends", "points": 4, "label": "12+ hours/day, open weekends" },
            { "condition": "standard_hours", "points": 3, "label": "Standard business hours set" },
            { "condition": "limited_hours", "points": 2, "label": "Hours set but limited" },
            { "condition": "missing_or_closed", "points": 0, "label": "No hours or temporarily closed" }
          ]
        },
        {
          "id": "attributes",
          "name": "Attributes Completion",
          "max_points": 3,
          "data_citation": "Whitespark 2026: Low-moderate impact. Trust building signal.",
          "rules": [
            { "condition": "most_completed", "points": 3, "label": "Most applicable attributes set" },
            { "condition": "some_completed", "points": 2, "label": "Some attributes set" },
            { "condition": "few_or_none", "points": 0, "label": "Few or no attributes" }
          ]
        },
        {
          "id": "products",
          "name": "Products Section",
          "max_points": 3,
          "data_citation": "Engagement and conversion signal. Applicable for retail, food, and product-based categories.",
          "rules": [
            { "condition": "products_listed_with_details", "points": 3, "label": "Products listed with prices and descriptions" },
            { "condition": "some_products", "points": 2, "label": "Some products listed" },
            { "condition": "no_products_applicable", "points": 1, "label": "No products (but category suggests they should)" },
            { "condition": "not_applicable", "points": 3, "label": "Products not applicable for this category (full points)" }
          ]
        }
      ]
    },
    {
      "id": "reviews",
      "name": "Review Signals",
      "max_points": 25,
      "weight_source": "Search Atlas ML: Review count = 26% of variance for top 10. Whitespark 2026: Review signals = 16-20%.",
      "checks": [
        {
          "id": "review_count_vs_competitors",
          "name": "Review Count vs. Competitors",
          "max_points": 8,
          "data_citation": "Search Atlas ML Study: Review count = 19.2% of ranking variance (all positions), 26% for top 10.",
          "rules": [
            { "condition": "above_competitor_average", "points": 8, "label": "More reviews than competitor average" },
            { "condition": "within_25pct", "points": 5, "label": "Within 25% of competitor average" },
            { "condition": "50_to_75pct", "points": 3, "label": "50-75% of competitor average" },
            { "condition": "under_50pct", "points": 1, "label": "Under 50% of competitor average" },
            { "condition": "under_10_total", "points": 0, "label": "Under 10 reviews total" }
          ]
        },
        {
          "id": "average_rating",
          "name": "Average Star Rating",
          "max_points": 4,
          "data_citation": "Search Atlas ML: Ratings = 3.8% of variance. Important but secondary to count and recency.",
          "rules": [
            { "condition": "rating_gte_4.5", "points": 4, "label": "4.5+ star rating" },
            { "condition": "rating_4.0_4.4", "points": 3, "label": "4.0-4.4 star rating" },
            { "condition": "rating_3.5_3.9", "points": 2, "label": "3.5-3.9 star rating" },
            { "condition": "rating_under_3.5", "points": 0, "label": "Under 3.5 star rating" }
          ]
        },
        {
          "id": "review_recency",
          "name": "Review Recency",
          "max_points": 6,
          "data_citation": "Darren Shaw (Whitespark 2026): Review recency moved from #20 to top-5 factor. 'The moment you stop getting new reviews, rankings slip.'",
          "rules": [
            { "condition": "within_7_days", "points": 6, "label": "Review in last 7 days" },
            { "condition": "within_14_days", "points": 4, "label": "Review in last 14 days" },
            { "condition": "within_30_days", "points": 2, "label": "Review in last 30 days" },
            { "condition": "over_30_days", "points": 0, "label": "No review in 30+ days" }
          ]
        },
        {
          "id": "review_velocity",
          "name": "Monthly Review Velocity",
          "max_points": 4,
          "data_citation": "Whitespark 2026: Consistent flow beats sporadic bursts. Target 1-3 new reviews per week.",
          "rules": [
            { "condition": "4_plus_per_month", "points": 4, "label": "4+ reviews per month" },
            { "condition": "2_3_per_month", "points": 3, "label": "2-3 reviews per month" },
            { "condition": "1_per_month", "points": 2, "label": "~1 review per month" },
            { "condition": "under_1_per_month", "points": 0, "label": "Less than 1 per month" }
          ]
        },
        {
          "id": "response_rate",
          "name": "Owner Response Rate",
          "max_points": 3,
          "data_citation": "Harvard Business Review: Businesses that reply to reviews receive 12% more reviews. Low-moderate ranking impact but high conversion impact.",
          "rules": [
            { "condition": "rate_gte_80pct", "points": 3, "label": "80%+ reviews responded to" },
            { "condition": "rate_50_79pct", "points": 2, "label": "50-79% responded" },
            { "condition": "rate_under_50pct", "points": 1, "label": "Under 50% responded" },
            { "condition": "rate_0", "points": 0, "label": "No responses" }
          ]
        }
      ]
    },
    {
      "id": "visual",
      "name": "Visual Signals",
      "max_points": 13,
      "weight_source": "Whitespark 2026: Photo quantity and quality ranked #8 in local pack factors. Moderate impact.",
      "checks": [
        {
          "id": "photo_count",
          "name": "Total Photo Count",
          "max_points": 5,
          "data_citation": "Whitespark 2026: Photo quantity and quality = moderate ranking impact. Engagement signal.",
          "rules": [
            { "condition": "count_gte_50", "points": 5, "label": "50+ photos" },
            { "condition": "count_20_49", "points": 3, "label": "20-49 photos" },
            { "condition": "count_5_19", "points": 1, "label": "5-19 photos" },
            { "condition": "count_under_5", "points": 0, "label": "Under 5 photos" }
          ]
        },
        {
          "id": "photo_variety",
          "name": "Photo Variety",
          "max_points": 3,
          "data_citation": "Best practice: Interior, exterior, team, product/service, and action photos recommended.",
          "rules": [
            { "condition": "multiple_categories", "points": 3, "label": "Photos across multiple categories" },
            { "condition": "some_variety", "points": 2, "label": "Some variety in photos" },
            { "condition": "limited_variety", "points": 0, "label": "Limited or no variety" }
          ]
        },
        {
          "id": "logo",
          "name": "Logo Uploaded",
          "max_points": 2,
          "rules": [
            { "condition": "has_logo", "points": 2, "label": "Logo uploaded" },
            { "condition": "no_logo", "points": 0, "label": "No logo" }
          ]
        },
        {
          "id": "cover_photo",
          "name": "Cover Photo Set",
          "max_points": 2,
          "rules": [
            { "condition": "has_cover", "points": 2, "label": "Cover photo set" },
            { "condition": "no_cover", "points": 0, "label": "No cover photo" }
          ]
        },
        {
          "id": "recent_photos",
          "name": "Recent Photos",
          "max_points": 1,
          "rules": [
            { "condition": "within_30_days", "points": 1, "label": "Photos uploaded in last 30 days" },
            { "condition": "over_30_days", "points": 0, "label": "No recent photos" }
          ]
        }
      ]
    },
    {
      "id": "activity",
      "name": "Activity Signals",
      "max_points": 10,
      "weight_source": "Sterling Sky: Posts don't directly affect rankings. But posting shows active profile. Low-moderate signal.",
      "checks": [
        {
          "id": "post_recency",
          "name": "Post/Update Recency",
          "max_points": 5,
          "data_citation": "Sterling Sky testing: Posts don't directly boost rankings. But Google displays them prominently. Engagement and freshness signal.",
          "rules": [
            { "condition": "within_7_days", "points": 5, "label": "Post within last 7 days" },
            { "condition": "within_14_days", "points": 3, "label": "Post within last 14 days" },
            { "condition": "within_30_days", "points": 1, "label": "Post within last 30 days" },
            { "condition": "over_30_days_or_none", "points": 0, "label": "No recent posts" }
          ]
        },
        {
          "id": "post_frequency",
          "name": "Post Frequency",
          "max_points": 3,
          "rules": [
            { "condition": "weekly_or_more", "points": 3, "label": "Posts weekly or more" },
            { "condition": "biweekly", "points": 2, "label": "Posts every 2 weeks" },
            { "condition": "monthly", "points": 1, "label": "Posts monthly" },
            { "condition": "rare_or_never", "points": 0, "label": "Rarely or never posts" }
          ]
        },
        {
          "id": "ask_maps_readiness",
          "name": "Q&A / Ask Maps Readiness",
          "max_points": 2,
          "data_citation": "Q&A deprecated and replaced by Gemini-powered Ask Maps. Website content feeds Ask Maps responses.",
          "rules": [
            { "condition": "website_with_faq_content", "points": 2, "label": "Website has FAQ/service content for Ask Maps" },
            { "condition": "basic_website", "points": 1, "label": "Website exists but limited content" },
            { "condition": "no_website", "points": 0, "label": "No website to feed Ask Maps" }
          ]
        }
      ]
    },
    {
      "id": "website",
      "name": "Website Signals",
      "max_points": 12,
      "weight_source": "Whitespark 2026: Website/On-Page = 18% of local pack factors. Dedicated service pages = #1 local organic factor.",
      "checks": [
        {
          "id": "website_linked",
          "name": "Website Linked to GBP",
          "max_points": 4,
          "data_citation": "Whitespark 2026: 'Dedicated Page for Each Service' = #1 factor for local organic rankings and #2 for AI visibility.",
          "rules": [
            { "condition": "linked_https_mobile_loads", "points": 4, "label": "Website linked, HTTPS, mobile responsive, loads fast" },
            { "condition": "linked_https_loads", "points": 3, "label": "Website linked, HTTPS, loads" },
            { "condition": "linked_loads", "points": 2, "label": "Website linked, loads" },
            { "condition": "linked_broken", "points": 1, "label": "Website linked but broken" },
            { "condition": "no_website", "points": 0, "label": "No website linked" }
          ]
        },
        {
          "id": "website_https",
          "name": "HTTPS Enabled",
          "max_points": 2,
          "rules": [
            { "condition": "https", "points": 2, "label": "HTTPS enabled" },
            { "condition": "http_only", "points": 0, "label": "No HTTPS" }
          ]
        },
        {
          "id": "website_loads",
          "name": "Website Loads",
          "max_points": 2,
          "rules": [
            { "condition": "loads_under_3s", "points": 2, "label": "Loads within 3 seconds" },
            { "condition": "loads_slow", "points": 1, "label": "Loads but slow" },
            { "condition": "broken", "points": 0, "label": "Does not load" }
          ]
        },
        {
          "id": "website_nap",
          "name": "NAP on Homepage",
          "max_points": 2,
          "data_citation": "NAP consistency between GBP and website is a core citation/trust signal.",
          "rules": [
            { "condition": "nap_visible", "points": 2, "label": "Business name, address, phone visible on homepage" },
            { "condition": "partial_nap", "points": 1, "label": "Partial NAP (missing address or phone)" },
            { "condition": "no_nap", "points": 0, "label": "No NAP found on homepage" }
          ]
        },
        {
          "id": "website_mobile",
          "name": "Mobile Responsive",
          "max_points": 2,
          "rules": [
            { "condition": "mobile_friendly", "points": 2, "label": "Mobile responsive" },
            { "condition": "not_mobile_friendly", "points": 0, "label": "Not mobile responsive" }
          ]
        }
      ]
    },
    {
      "id": "competitive",
      "name": "Competitive Position",
      "max_points": 8,
      "weight_source": "Relative metrics. Based on comparison to top 3 competitors in same category and area.",
      "checks": [
        {
          "id": "review_count_gap",
          "name": "Review Count vs. Top 3",
          "max_points": 3,
          "rules": [
            { "condition": "leading", "points": 3, "label": "More reviews than all 3 competitors" },
            { "condition": "competitive", "points": 2, "label": "Within range of competitors" },
            { "condition": "behind", "points": 1, "label": "Significantly behind competitors" },
            { "condition": "far_behind", "points": 0, "label": "Major review gap" }
          ]
        },
        {
          "id": "rating_gap",
          "name": "Rating vs. Top 3",
          "max_points": 2,
          "rules": [
            { "condition": "above_average", "points": 2, "label": "Rating above competitor average" },
            { "condition": "at_average", "points": 1, "label": "Rating at competitor average" },
            { "condition": "below_average", "points": 0, "label": "Rating below competitor average" }
          ]
        },
        {
          "id": "photo_gap",
          "name": "Photo Count vs. Top 3",
          "max_points": 3,
          "rules": [
            { "condition": "leading", "points": 3, "label": "More photos than all competitors" },
            { "condition": "competitive", "points": 2, "label": "Within range of competitors" },
            { "condition": "behind", "points": 1, "label": "Fewer photos than competitors" },
            { "condition": "far_behind", "points": 0, "label": "Major photo gap" }
          ]
        }
      ]
    }
  ],
  "grade_scale": [
    { "min": 85, "max": 100, "grade": "A", "label": "Excellent. Minor tweaks only." },
    { "min": 70, "max": 84, "grade": "B", "label": "Good. Key optimizations needed." },
    { "min": 55, "max": 69, "grade": "C", "label": "Average. Significant gaps." },
    { "min": 40, "max": 54, "grade": "D", "label": "Below average. Many issues." },
    { "min": 0, "max": 39, "grade": "F", "label": "Critical. Major overhaul needed." }
  ]
}
